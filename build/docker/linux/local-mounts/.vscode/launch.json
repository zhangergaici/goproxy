{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "fx_main|Debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/00_flexi_engine/bin/linux/debug/x64/fx_main.exe",
            "args": ["game_framework_null_render.ini"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/00_flexi_engine/bin/linux/debug/x64/",
            "environment": [{"name":"LD_LIBRARY_PATH", "value":"$LD_LIBRARY_PATH:${workspaceFolder}/00_flexi_engine/bin/linux/debug/x64/"}],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        }

    ]
}